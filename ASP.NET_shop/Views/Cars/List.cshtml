@using ASP.NET_shop.Data.Model
@model IEnumerable<Car>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <h2>Все автомобили</h2>
    @{
        foreach (var car in Model)
        {
            <div>
                <h2>Модель: @car.name</h2>
                <p>Цена: @car.price.ToString("c")</p>
                <p>
                    <img src ="@car.img"/> 
                </p>
            </div>
        }
    }
</body>
</html>
